<Window x:Class="WPF_showcase.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_showcase"
        mc:Ignorable="d"
        Title="Kalendarz" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="29*"/>
            <RowDefinition Height="345*"/>
            <RowDefinition Height="45*"/>
        </Grid.RowDefinitions>
        <Viewbox HorizontalAlignment="Left" Margin="10,10,0,10" Grid.Column="0" Grid.Row="0" Grid.RowSpan="3" Width="370">
            <Calendar HorizontalAlignment="Center"/>
        </Viewbox>
        <TextBlock Grid.Column="1" FontSize="24" FontWeight="Bold" Margin="0,0,0,0" HorizontalAlignment="Center">
            data
        </TextBlock>
        <DataGrid Grid.Column="1" Margin="10" Grid.Row="1"/>
        <Button Content="Dodaj wpis" Grid.Column="1" HorizontalAlignment="Center" Margin="10,0,0,10" Grid.Row="2" VerticalAlignment="Center" Width="auto" FontSize="24"/>
    </Grid>
</Window>
